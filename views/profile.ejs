<!doctype html>
<html>
<head>
    <title>easyBaris</title>
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
    <link href="https://fonts.googleapis.com/css?family=Baloo+Thambi+2&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="style.css">
      <script src="https://kit.fontawesome.com/077191d827.js" crossorigin="anonymous"></script>
</head>
  <body>


    <style>
    .orders.done {
    background-color: #bada55;
  }
  .red{
    color: yellow;
  }


  </style>
  <span style="display:none" class="userEmail"><%= user.local.email %></span>

    <div class="page-header text-center" >
        <h1> Current Orders In Place:</h1>
        <a href="/logout" class="btn btn-default btn-sm">Logout</a>
    </div>

<section>
  <h3> Active Order Queue : </h3>
  <ul class="orders">
    <% for(var i=0; i < orders.length; i++) {%>
      <% if(orders[i].completed === undefined){ %>

        <li class="order">


      <span><%= orders[i].customer %></span>
      <span><%= orders[i].order %></span>
    </li>
    <% } %>
<% } %>

  </ul>

</section>
<section>
  <h3>Completed Orders</h3>
  <ul class="orders red">
    <% for(var i=0; i< orders.length; i++) {%>
      <% if (orders[i].completed === true && user.local.email == orders[i].name) { %>
    <li>
      <span><%= orders[i].name %></span>
      <span><%= orders[i].customer %></span>
      <span><%= orders[i].order %></span>
      <span><i class="fa fa-trash" aria-hidden="true"></i></span>
    </li>
  <% } %>
    <% } %>
  </ul>

</section>





        <script src="main.js"></script>
    </body>
</html>
